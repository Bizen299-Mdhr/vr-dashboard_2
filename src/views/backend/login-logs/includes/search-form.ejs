<form action="<%- url %>" method="get" autocomplete="off">
    <div class="form-row align-items-center">
        <div class="col-auto mb-2" id="">
            <label class="sr-only"
                   for="keyword">keyword</label>
            <input  type="text" class="form-control" value="<%= query ? query.keyword : '' %>" id="keyword"
                   placeholder="keyword"
                   name="keyword">
        </div>
        <div class="col-lg-2 col-md-4 col-sm-4 mb-2" id="">
            <input  type="text" class="form-control daterangePicker" value="<%= Object.keys(query).length > 0 && query.date_range !== '' ? query.date_range : defaultRange %>" id="date-range"
            placeholder="keyword"
            name="date_range">
        </div>
        <div class="form-row align-items-center">
            <button class="btn btn-primary mb-2 ml-2" type="submit"><em class="fas fa-search"
                                                                        aria-hidden="true"></em> Search
            </button>
            <a href="<%- url %>" class="btn btn-primary mb-2 ml-2">
                Clear</a>
        </div>
    </div>
</form>