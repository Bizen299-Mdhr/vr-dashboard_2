<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 ">
                <%- include('../partials/messages') %>

                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">
                                    <%= pageTitle %>
                                </h4>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <form action="/system/blog/<%= data._id %>?_method=PUT" class="form " method="post" enctype="multipart/form-data">
                                <input type="hidden" name="_csrf" value="<%-csrfToken%>">
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <label for="title">Page Head Title</label> <span style="color:red;">*</span>
                                        <input type="text" class="form-control  " name="page_title" id="page_title"
                                            value="<%= inputData && inputData.page_title ? inputData.page_title : blogPageTitle?.page_title %>"
                                            required>
                                        <div class="invalid-feedback">
                                            Please set Page Head Title
                                        </div>
                                    </div>    
                                    <div class="col-md-12 mb-3">
                                        <label for="title">Page Head Sub Title</label> <span style="color:red;">*</span>
                                        <input type="text" class="form-control  " name="page_sub_title" id="page_sub_title"
                                            value="<%= inputData && inputData.page_sub_title ? inputData.page_sub_title : blogPageTitle?.page_sub_title %>"
                                            required>
                                        <div class="invalid-feedback">
                                            Please set Page Sub Title
                                        </div>
                                    </div>    
                                    <%if(blogPageTitle._id != data._id){%>
                                    
                                    <div class="col-md-12 mb-3">
                                        <label for="title">Title</label> <span style="color:red;">*</span>
                                        <input type="text" class="form-control  " name="title" id="title"
                                            value="<%= inputData && inputData.title ? inputData.title : data?.title %>"
                                            required>
                                        <div class="invalid-feedback">
                                            Please set Title
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="created_by">Created By / Refrence </label> <span style="color:red;">*</span>
                                        <input type="text" class="form-control  " name="created_by" id="created_by"
                                        value="<%= inputData && inputData.created_by ? inputData.created_by : data?.created_by %>"
                                            required>
                                            
                                        <div class="invalid-feedback">
                                            Please set Created By / Refrence
                                        </div>
                                    </div>
                             
                                        <div class="col-md-12 mb-3">
                                            <label for="title">Image </label> 
                                            <input type="file" name="image" class="form-control " >
                                            <div class="invalid-feedback">
                                                Please set Image
                                            </div>
                   

                                        </div>
                                        <img src="/backend<%= data?.image %>" class="img-thumbnail" width="40%"  alt="Responsive image">

                                    <div class="col-md-12 mb-3">
                                        <label for="title">Detail </label>
                                        <textarea class="form-control ckeditor "
                                            name="detail"><%= inputData && inputData.detail ? inputData.detail : data?.detail %></textarea>
                                    </div>
                                    <%}%>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit">
                                        Save
                                    </button>
                                    <button class="btn iq-bg-danger" type="button">
                                        <a href="/system/blog" role="button">
                                            Cancel
                                        </a>
                                    </button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<style>
    .range-input {
        display: flex;
        align-items: center;
    }

    .range-input label {
        margin-right: 10px;
    }

    select {
        font-family: fontAwesome
    }

    .removeSectionOneRow,
    .addSectionOneRow {

        font-size: 11px;
        flex-wrap: nowrap;
        white-space: nowrap;

    }
    .ck-editor__editable_inline {
    min-height: 400px;
}
</style>
