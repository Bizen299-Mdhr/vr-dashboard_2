<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 ">
                <%- include('../partials/messages') %>

                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">
                                    <%= pageTitle %>
                                </h4>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <form action="/system/email-templates/<%= data._id %>?_method=PUT" method="post">
                                <div class="row row-sm">
                                    <div class="col-lg-12">
                                            <div class="card custom-card">
                                                <input type="hidden" name="_csrf" value="<%-csrfToken%>">
                                                <div class="card-body">
                                                    <div class="inner__card_b1">
                                                        <div class="row align-items-baseline mt-3">
                                                            <div class="col-lg-12">
                                                                <div class="inner__border">
                                                                    <div
                                                                        class="form-group form-check d-flex align-items-baseline">
                                                                        <p class="inner__card cke_required">
                                                                            <b>
                                                                                Title
                                                                            </b>
                                                                            <span style="color:red;">*</span>
                                                                        </p>
                                                                        <input type="text" class="form-control"
                                                                            id="title" value="<%= data.title %>"
                                                                            name="title" maxlength="50" required>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>

                                                        <div class="row align-items-baseline ">
                                                            <div class="col-lg-12">
                                                                <div class="inner__border">
                                                                    <div
                                                                        class="form-group form-check d-flex align-items-baseline">
                                                                        <p class="inner__card">
                                                                            <b>
                                                                                Code
                                                                            </b>
                                                                            <span style="color:red;">*</span>
                                                                        </p>
                                                                        <input type="text" class="form-control"
                                                                            id="code" maxlength="50"
                                                                            value="<%= data.code %>" name="code"
                                                                            readonly>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>


                                                        <div class="row align-items-baseline ">
                                                            <div class="col-lg-12">
                                                                <div class="inner__border">
                                                                    <div
                                                                        class="form-group form-check d-flex align-items-baseline">
                                                                        <p class="inner__card">
                                                                            <b>
                                                                                Subject
                                                                            </b>
                                                                            <span style="color:red;">*</span>
                                                                        </p>
                                                                        <input type="text" class="form-control"
                                                                            id="subject" value="<%= data.subject %>"
                                                                            name="subject" maxlength="50" required>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>
                                                        <div class="row align-items-baseline ">

                                                            <div class="col-lg-12">
                                                                <div class="inner__border">
                                                                    <div
                                                                        class=" form-check ">
                                                                        <p class="inner__card">
                                                                            <b>
                                                                                Body
                                                                            </b>
                                                                            <span style="color:red;">*</span>
                                                                        </p>
                                                                        <div class="ext-textarea">
                                                                            <textarea class="form-control ckeditor"
                                                                                name="body" type="text"
                                                                                id="email_body"><%= data.body %></textarea>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                                
                                            </div>
                                            <div class="form-group">
                                
                                                <button class="btn btn-primary" type="submit">
                                                    Save
                                                </button>
                                            
                                                <button class="btn iq-bg-danger" type="button">
                                                    <a href="/system/email-templates" role="button">
                                                        Cancel
                                                    </a>
                                                </button>
                                            </div>  
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>
<script>
</script>